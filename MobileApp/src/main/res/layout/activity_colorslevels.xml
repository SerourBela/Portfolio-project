<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/parent.contentLayout"
    android:orientation="vertical"
    android:background="@drawable/bklevels"
    android:gravity="center"
    >
    <TextView
        style="@style/viewParent.headerText"
        android:fontFamily="@font/el_messiri_semibold"
        android:text="اخْتِيَارْ المُسْتَوَى"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold" />
    <Button
        android:id="@+id/level1"
        android:text="المُسْتَوَى 1"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:fontFamily="@font/el_messiri_semibold"
        android:background="@drawable/backbtnlevels"
        />

    <Button
        android:id="@+id/level2"
        android:text="المُسْتَوَى 2"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:background="@drawable/backbtnlevels"
        android:textColor="@android:color/white"
        android:fontFamily="@font/el_messiri_semibold">
    </Button>
    <Button
        android:id="@+id/level3"
        android:text="المُسْتَوَى 3"
        android:layout_marginBottom="20dp"
        android:layout_height="wrap_content"
        android:layout_width="120dp"
        android:textSize="21sp"
        android:textStyle="bold"
        android:background="@drawable/backbtnlevels"
        android:textColor="@android:color/white"
        android:fontFamily="@font/el_messiri_semibold">
    </Button>

</LinearLayout>
